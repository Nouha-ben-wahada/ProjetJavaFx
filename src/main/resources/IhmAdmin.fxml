<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: linear-gradient(to bottom, #f0f8ff, #ffffff);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.AdminDashboardController">

    <children>
        <!-- Top Bar -->
        <HBox alignment="CENTER_LEFT" layoutX="0" layoutY="0" prefHeight="50.0" prefWidth="800.0" spacing="20" style="-fx-background-color: #007BFF; -fx-padding: 10;">
            <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-family: 'Arial'; -fx-font-weight: bold;" text="Tableau de Bord Administratif" />
        </HBox>

        <!-- Main Content -->
        <VBox alignment="CENTER" layoutY="80.0" prefWidth="800.0" spacing="20">
            <Label style="-fx-font-size: 24px; -fx-font-family: 'Arial Black'; -fx-text-fill: #333333;" text="Bienvenue dans l'espace d'administration" />
            <Label style="-fx-font-size: 16px; -fx-font-family: 'Arial'; -fx-text-fill: #555555;" text="Sélectionnez une action ci-dessous pour commencer." />

            <!-- Action Buttons -->
            <VBox alignment="CENTER" spacing="15">
                <Button text="Gestion des Produits"
                        prefWidth="350"
                        onAction="#handleGestionProduits"
                        style="-fx-background-color: #007BFF; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-family: 'Arial'; -fx-border-radius: 10; -fx-background-radius: 10;" />

                <Button text="Gestion des Commandes"
                        prefWidth="350"
                        onAction="#handleGestionCommandes"
                        style="-fx-background-color: #28A745; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-family: 'Arial'; -fx-border-radius: 10; -fx-background-radius: 10;" />

                <Button text="Gestion des Livraisons"
                        prefWidth="350"
                        onAction="#handleGestionLivraisons"
                        style="-fx-background-color: #17A2B8; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-family: 'Arial'; -fx-border-radius: 10; -fx-background-radius: 10;" />

                <Button text="Gestion des Réclamations"
                        prefWidth="350"
                        onAction="#handleGestionReclamations"
                        style="-fx-background-color: #FFC107; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-family: 'Arial'; -fx-border-radius: 10; -fx-background-radius: 10;" />

                <Button text="Se Déconnecter"
                        prefWidth="350"
                        onAction="#handleDeconnexion"
                        style="-fx-background-color: #DC3545; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-family: 'Arial'; -fx-border-radius: 10; -fx-background-radius: 10;" />
            </VBox>
        </VBox>

        <!-- Footer -->
        <Label alignment="CENTER" layoutX="0.0" layoutY="570.0" prefWidth="800.0" style="-fx-font-size: 12px; -fx-font-family: 'Arial'; -fx-text-fill: #888888;" text="© 2025 - Tableau de bord Administratif" />
    </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="434.0" prefWidth="583.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.LoginController">
    <!-- Conteneur principal -->
    <VBox alignment="CENTER" layoutX="145.0" layoutY="14.0" prefHeight="287.0" prefWidth="278.0" spacing="20" AnchorPane.bottomAnchor="67.0" AnchorPane.leftAnchor="145.0" AnchorPane.rightAnchor="120.0" AnchorPane.topAnchor="14.0">
        <!-- Titre de la page -->
        <Label style="-fx-font-size: 24; -fx-font-weight: bold;" text="Connexion" />

        <!-- Champs de saisie -->
        <VBox alignment="CENTER" prefHeight="60.0" prefWidth="394.0" spacing="10">
            <TextField fx:id="txtUsername" opacity="0.49" prefHeight="25.0" prefWidth="344.0" promptText="Nom d'utilisateur" text="txtUsername" />
            <PasswordField fx:id="txtPassword" prefHeight="25.0" prefWidth="254.0" promptText="Mot de passe" text="txtPassword" />
        </VBox>

        <!-- Boutons d'action -->
        <HBox alignment="CENTER" spacing="10">
            <Button onAction="#Connecter" style="-fx-background-color: #007bff; -fx-text-fill: #ffffff;" text="Se connecter" />
            <Button onAction="#Annuler" style="-fx-background-color: #dc3545; -fx-text-fill: #ffffff;" text="Annuler" />
        </HBox>

        <!-- Lien vers la création de compte -->
        <Label style="-fx-text-fill: #007bff;" text="Pas encore de compte ? Créez-en un ici." />
    </VBox>
   <Button layoutX="476.0" layoutY="395.0" mnemonicParsing="false" onAction="#retourAccueil" text="Retour Accueil" />
</AnchorPane>

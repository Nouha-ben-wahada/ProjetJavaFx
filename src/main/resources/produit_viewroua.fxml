<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" prefHeight="400.0" prefWidth="600.0">
    <!-- Champs pour la recherche -->
    <VBox spacing="10" layoutX="20" layoutY="20" prefWidth="560">
        <Label text="Recherche de Produits" style="-fx-font-size: 18; -fx-font-weight: bold;" />

        <HBox spacing="10">
            <Label text="Nom : " />
            <TextField fx:id="nomField" promptText="Nom du produit" />
        </HBox>

        <HBox spacing="10">
            <Label text="Catégorie : " />
            <TextField fx:id="categorieField" promptText="Catégorie" />
        </HBox>

        <HBox spacing="10">
            <Label text="Sous-Catégorie : " />
            <TextField fx:id="sousCategorieField" promptText="Sous-Catégorie" />
        </HBox>

        <!-- Bouton de recherche -->
        <Button fx:id="rechercherButton" text="Rechercher" prefWidth="100" />

        <!-- Liste des résultats -->
        <Label text="Résultats : " style="-fx-font-size: 14;" />
        <ListView fx:id="resultatsListView" prefHeight="200" />
    </VBox>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="700.0" prefWidth="720.0" spacing="20.0" xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.ReclamationController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
    </padding>
    <!-- Title -->
    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Gestion des Réclamations" textFill="#045bf2" />

    <!-- Form Fields -->
    <VBox spacing="8">

        <Label text="E-mail du Client:" />
        <TextField fx:id="emailField" promptText="Entrez votre adresse e-mail" />

        <Label text="ID Commande:" />
        <TextField fx:id="idCommandeField" promptText="Entrez l'ID de votre commande" />

        <Label text="Ref Produit:" />
        <TextField fx:id="idProduitField" promptText="Entrez l'ID du produit à réclamer" />

        <Label text="Description:" />
        <TextArea fx:id="descriptionField" promptText="Entrez la description" />

        <Label text="Photo (Chemin):" />
        <TextField fx:id="photoPathField" promptText="Entrez le chemin de la photo" />

        <Label text="Date Réclamation:" />
        <DatePicker fx:id="dateReclamationField" />
    </VBox>

    <!-- Buttons -->
    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#addReclamation" style="-fx-background-color: lightblue;" text="Ajouter" />
    </HBox>

</VBox>

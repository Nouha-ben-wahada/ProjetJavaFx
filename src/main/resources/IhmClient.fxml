<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="716.0" style="-fx-background-color: linear-gradient(to bottom, #f0f8ff, #ffffff);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.ClientController">

    <children>
        <!-- Barre supérieure -->
        <HBox alignment="CENTER_RIGHT" layoutX="0" layoutY="0" prefHeight="50.0" prefWidth="800.0" spacing="20" style="-fx-background-color: #007BFF; -fx-padding: 10;">
            <Label style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-family: 'Arial';" text="Bienvenue," />
            <Label fx:id="lblClientName" style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" />
        </HBox>

        <!-- En-tête -->
        <VBox alignment="CENTER" layoutY="60.0" prefWidth="800.0" spacing="10">
            <Label style="-fx-font-size: 28px; -fx-font-family: 'Arial Black'; -fx-text-fill: #333333;" text="Bienvenue dans l'Espace Client" />
            <Label style="-fx-font-size: 18px; -fx-font-family: 'Arial'; -fx-text-fill: #555555;" text="Que souhaitez-vous faire aujourd'hui ?" />
        </VBox>

        <!-- Contenu principal -->
        <VBox alignment="CENTER" layoutX="200.0" layoutY="166.0" prefWidth="400.0" spacing="15">
            <!-- Bouton Consulter Produits -->
            <Button onAction="#handleConsulterProduits" prefWidth="350" style="-fx-background-color: #007BFF; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-family: 'Arial'; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 5);" text="Consulter Produits" />

            <!-- Bouton Rechercher un Produit -->
            <Button onAction="#handleRechercherProduit" prefWidth="350" style="-fx-background-color: #6C757D; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-family: 'Arial'; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 5);" text="Rechercher un Produit" />

            <!-- Bouton Gérer Panier -->
            <Button onAction="#handleReclamer" prefWidth="350" style="-fx-background-color: #28A745; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-family: 'Arial'; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 5);" text=" Réclamer" />

            <!-- Bouton Consulter Commandes -->
            <Button onAction="#handleConsulterCommandes" prefWidth="350" style="-fx-background-color: #FFC107; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-family: 'Arial'; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 5);" text="Gérer Commandes" />

            <!-- Bouton Réserver un Service -->
            <Button onAction="#handleReserverService" prefWidth="350" style="-fx-background-color: #8A2BE2; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-family: 'Arial'; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 5);" text="Réserver un Service" />

            <!-- Bouton Se Déconnecter -->
            <Button onAction="#handleDeconnexion" prefWidth="350" style="-fx-background-color: #DC3545; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-family: 'Arial'; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 5);" text="Se Déconnecter" />
        </VBox>

        <!-- Pied de page -->
        <Label alignment="CENTER" layoutX="0.0" layoutY="570.0" prefWidth="800.0" style="-fx-font-size: 12px; -fx-font-family: 'Arial'; -fx-text-fill: #888888;" text="© 2025 - Boutique en ligne" />
    </children>
</AnchorPane>

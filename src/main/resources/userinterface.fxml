<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.UserController"
            stylesheets="@styles.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <VBox spacing="20" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0">

        <HBox spacing="10" alignment="CENTER">
            <TextField fx:id="txtNomSearchUser" promptText="Nom du produit"
                       prefWidth="200"/>
            <ComboBox fx:id="cmbCategorieSearchUser" promptText="Catégorie"
                      prefWidth="150"/>
            <ComboBox fx:id="cmbSousCategorieSearchUser" promptText="Sous-catégorie"
                      prefWidth="150"/>
            <Button text="Rechercher" onAction="#rechercherProduitUser"
                    styleClass="search-button"/>
        </HBox>

        <TableView fx:id="tableResults" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colNomProduit" text="Nom" prefWidth="200"/>
                <TableColumn fx:id="colCategorieProduit" text="Catégorie" prefWidth="150"/>
                <TableColumn fx:id="colSousCategorieProduit" text="Sous-Catégorie" prefWidth="150"/>
                <TableColumn fx:id="colPrixProduit" text="Prix" prefWidth="100"/>
            </columns>
        </TableView>
    </VBox>
</AnchorPane>
